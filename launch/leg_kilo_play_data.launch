<launch>
    <param name="/use_sim_time" value="true"/>

    <node pkg="tf2_ros" type="static_transform_publisher" name="body_to_lidar" 
          args="0 0 0.15 0 0 0 sdk_base_link_3d velodyne" />

    <node pkg="tf2_ros" type="static_transform_publisher" name="lidar_to_imu" 
          args="0 0 -0.08 0 0 0 velodyne imu_link" />

	<node pkg="robot_localization" type="ekf_localization_node" name="ekf_se" clear_params="true">
        <rosparam command="load" file="$(find leg_kilo)/config/ekf_params.yaml" />
        </node>
        
        <include file = "$(find leg_kilo)/launch/cloudpoints_to_laserscan.launch"/>
        
        <include file = "$(find leg_kilo)/launch/gmapping.launch"/>
        
    <node pkg="rviz" type="rviz" name="rviz" 
          args="-d $(find leg_kilo)/rviz/leg_kilo_rviz_config.rviz" />



</launch>

