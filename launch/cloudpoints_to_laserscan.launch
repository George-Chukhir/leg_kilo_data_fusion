<launch>
    <arg name="input_topic" default="/points_raw"/>

    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">
        
        <remap from="cloud_in" to="$(arg input_topic)"/>
        <remap from="scan" to="/scan"/>

        <param name="target_frame" value="velodyne"/>
        <param name="transform_tolerance" value="0.01"/>

        <param name="min_height" value="-0.15"/>
        <param name="max_height" value="0.15"/>

        <param name="angle_min" value="-3.1415"/> <param name="angle_max" value="3.1415"/>  <param name="angle_increment" value="0.0087"/> <param name="scan_time" value="0.1"/>
        <param name="range_min" value="0.45"/>
        <param name="range_max" value="100.0"/>
        <param name="use_inf" value="true"/>

        <param name="concurrency_level" value="1"/>
    </node>
</launch>
